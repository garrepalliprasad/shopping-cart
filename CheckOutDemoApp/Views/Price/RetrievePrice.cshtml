@model Price
@{
    ViewBag.Title = $"{Model.Id} Product Details";
}
<div class="card">
    <div class="card-header">
        @Model.Product.Name Details
    </div>
    <div class="card-body">
        <h3>@Model.Product.Description</h3>
        <h4>The Above said Product Cost is @Model.UnitAmountDecimal in @Model.Currency Currency</h4>
        <h5>@Model.Nickname</h5>
        <label>Product Image</label>
        <div style="width:200px;height:auto">
            @if (Model.Product.Images.Any())
            {
                <img src="@Model.Product.Images[0]" />
            }
            else
            {
                <h5>No Preview Available</h5>
            }
        </div>
    </div>
    <div class="card-footer">
        <a asp-controller="Price" asp-action="ListAllPrices">Back to List</a>
    </div>
</div>