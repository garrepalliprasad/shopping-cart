@model Price
@{
    ViewBag.Title = "Update Product Price Page";
}
<form asp-controller="Price" asp-action="CreatePrice" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="card">
        <div class="card-header">
            Update Product Price Here..
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="UnitAmountDecimal"></label>
                <input asp-for="UnitAmountDecimal" class="form-control"  disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Currency"></label>
                <input asp-for="Currency" class="form-control" disabled />
            </div>
            <div>
                <label asp-for="Nickname"></label>
                <input asp-for="Nickname" class="form-control" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</form>