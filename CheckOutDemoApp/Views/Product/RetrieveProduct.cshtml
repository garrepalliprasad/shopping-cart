@model Product
@{
    ViewBag.Title = $"{Model.Name} Product Details";
}
<div class="card">
    <div class="card-header">
        @Model.Name Details
    </div>
    <div class="card-body">
        <h3>@(Model.Active?"Available":"Not Available")</h3>
        <h4>@Model.Description</h4>
        <label>Existing Image</label>
        <div style="width:200px;height:auto">
            @if (Model.Images.Any())
            {
                <img src="@Model.Images[0]" />
            }
            else
            {
                <h5>No Preview Available</h5>
            }
        </div>
    </div>
    <div class="card-footer">
        <a asp-controller="Product" asp-action="ListAllProducts">Back to List</a>
    </div>
</div>