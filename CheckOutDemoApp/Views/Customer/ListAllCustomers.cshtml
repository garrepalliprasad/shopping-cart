@model StripeList<Customer>
@{
    ViewBag.Title = "List Of Customers Page";
}
@if (Model.Any())
{
    <table class="table table-dark">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Phone</td>
                <td>Address</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td ><a asp-controller="Customer" asp-action="RetrieveCustomer" asp-route-CustomerId="@customer.Id">View</a></td>
                <td ><a asp-controller="Customer" asp-action="UpdateCustomer" asp-route-CustomerId="@customer.Id">Edit</a></td>
                <td ><a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-CustomerId="@customer.Id" onclick="return confirm('Do You Want to Delete @customer.Name');">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
            <h3 class="card-text">
                No Customers At the Moment
            </h3>
        </div>
    </div>
}